<div class="container d-flex flex-column align-items-center mt-3">
  <h2 class="text-center">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group row">
      <%= f.label :password, "New password", class: "col-12 col-form-label" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>
    <div class="form-group row">
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "col-12" %>
    </div>

    <div class="form-group row">
      <%= f.label :password_confirmation, "Confirm new password", class: "col-12 col-form-label" %>
    </div>
    <div class="form-group row">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-12" %>
    </div>

    <div class="actions text-center">
      <%= f.submit "Change my password", class: "btn btn-primary font-weight-bold" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
