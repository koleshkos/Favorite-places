<div class="container d-flex flex-column align-items-center mt-3">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group row">
      <%= form.label 'Username', class: "col-12 col-form-label" %>
    </div>
    <div class="form-group row">
      <%= form.text_field :username, class: "form-control", placeholder: 'Enter username' %>
    </div>

    <div class="form-group row">
      <%= form.label 'email', class: "col-12 col-form-label" %>
    </div>
    <div class="form-group row">
      <%= form.email_field :email, class: "form-control", placeholder: 'Enter email' %>
    </div>

    <div class="form-group row">
      <%= form.label 'Name', class: "col-12 col-form-label" %>
    </div>
    <div class="form-group row">
      <%= form.text_field :name, class: "form-control", placeholder: 'Enter name' %>
    </div>

    <div class="form-group row">
      <%= form.label 'Sex', class: "col-12 col-form-label" %>
    </div>
    <div class="form-group row col-4">
      <%= form.select :sex, %w{Male Female}, :prompt => 'Select', required: true,
       placeholder: 'Gender', class: "form-control" %>
    </div>

    <div class="form-group row">
      <%= form.label 'Date of Birth', class: "col-12 col-form-label" %>
    </div>
    <div class="form-group row col-4">
      <%= form.date_select :date_of_birth, start_year: 1950, end_year: Time.now.year %>
    </div>

    <div class="form-group row">
      <%= form.label 'Password', class: "col-12 col-form-label" %>
    </div>
    <div class="form-group row">
      <%= form.password_field :password, class: "form-control", placeholder: 'Enter password' %>
    </div>

    <div class="form-group row">
      <%= form.label 'Password Confirmation', class: "col-12 col-form-label" %>
    </div>
    <div class="form-group row">
      <%= form.password_field :password_confirmation, class: "form-control", placeholder: 'Confirm password' %>
    </div>

    <div class="text-center mt-3">
      <%= form.submit 'Submit', class: "btn btn-primary font-weight-bold" %>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>